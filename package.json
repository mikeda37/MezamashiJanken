  "main": "main_process/main.js",
  "build": {
    "productName": "MezamashiJanken",
    "appId": "com.electron.mezamashijanken",
    "win": {
      "publisherName": "mikeda37",
      "certificateSubjectName": "mikeda37",
      "target": [
